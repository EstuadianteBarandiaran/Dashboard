\<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MedicoControl</title>
    <link rel="stylesheet" href="/css/styleMedico.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/app.js" defer></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="Container">
    
        <%- include("navbarMedico")%>
        <div class="Consultas">
            <div class="Consulta" style="margin-left: 100px;">
                <h2 style="font-weight: bold; color: #264150; font-size: 30px;">Paciente</h2>
                <table class="table table-striped table-hover ">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Campo</th>
                            <th scope="col">Información</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Motivo de consulta</td>
                            <td><%= Consulta[0].Motivo %></td>
                        </tr>
                        <tr>
                            <td>Síntomas</td>
                            <td><%= Consulta[0].Sintomas %></td>
                        </tr>
                        <tr>
                            <td>Alergias</td>
                            <td><%= Consulta[0].Alergias %></td>
                        </tr>
                        <tr>
                            <td>Cirugías previas</td>
                            <td><%= Consulta[0].CirugiasPrevias %></td>
                        </tr>
                        <tr>
                            <td>Hospitalizaciones previas</td>
                            <td><%= Consulta[0].HospitalizacionesPrevias %></td>
                        </tr>
                        <tr>
                            <td>Consumo de tabaco</td>
                            <td><%= Consulta[0].ConsumoTabaco %></td>
                        </tr>
                        <tr>
                            <td>Consumo de alcohol previas</td>
                            <td><%= Consulta[0].ConsumoAlcohol %></td>
                        </tr>
                        <tr>
                            <td>Dirección</td>
                            <td><%= Consulta[0].Direccion %></td>
                        </tr>
                    </tbody>
                </table>
                
                <div class="Operaciones">
                    <button class="btn btn-primary open-modal"
                        data-idC="<%= Consulta[0].idConsultas %>"
                        data-idH="<%= Consulta[0].idHistorialClinico %>"
                        data-bs-toggle="modal" data-bs-target="#recetaModal">Receta</button>
                </div>
            </div>
        </div> 
    </div>

    <!-- Modal -->
    <div class="modal fade" id="recetaModal" tabindex="-1" aria-labelledby="recetaModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="recetaModalLabel">Receta Médica</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="recetaForm">
                    <div class="modal-body">
                        <!-- Campo oculto para almacenar la ID de la consulta -->
                        <input type="hidden" id="idC" name="idC">
                        <input type="hidden" id="idH" name="idH">
                        <!--lau le agrego esto-->
                        <input type="hidden" id="Fecha" name="Fecha" value="<%= new Date().toISOString().split('T')[0] %>">
                        <!--lau termino aqui-->
                        <div class="mb-3">
                            <label for="Diagnostico" class="form-label" style="font-size: 15px;">Diagnóstico:</label>
                            <input type="text" id="Diagnostico" name="Diagnostico" class="form-control" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="Tratamiento" class="form-label" style="font-size: 15px;">Tratamiento:</label>
                            <textarea type="text" id="Tratamiento" name="Tratamiento" class="form-control" required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button  style="background-color: #264150;" type="submit" class="btn btn-primary">Enviar Receta</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="./js/btn.js"></script>

    
</body>
</html>