<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Historial</title>
    <link rel="stylesheet" href="/css/stylePacientes.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="Container">
        <%- include("navbarPaciente")%>

        <!-- Contenido principal -->
        <div class="content" style="margin-left: 90px !important;">
            <h1 style="font-weight: bold; color: #264150; font-size: 30px;">Historial Médico</h1>

            <!-- Tabla del historial -->
            <table class="table table-striped table-hover ">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Motivo</th>
                        <th>Estado</th>
                        <th>Receta</th>
                    </tr>
                </thead>
                <tbody id="historialBody">
                    <% for (var i = 0; i < ConsultaReceta.length; i++) { %>
                    <tr>
                        <td><%= ConsultaReceta[i].Fecha %></td>
                        <td><%= ConsultaReceta[i].Motivo %></td>
                        <td><%= ConsultaReceta[i].Estado %></td>
                        <td>
                            <div class="modal-footer">
                            <button class="btnVerReceta btn btn-outline-secondary" 
                                data-Motivo="<%= ConsultaReceta[i].Motivo %>"
                                data-Sintomas="<%= ConsultaReceta[i].Sintomas %>"
                                data-Diagnostico="<%= ConsultaReceta[i].Diagnostico %>"
                                data-Tratamiento="<%= ConsultaReceta[i].Tratamiento %>"
                                data-Fecha="<%= ConsultaReceta[i].Fecha %>"
                                data-Estado="<%= ConsultaReceta[i].Estado %>"
                                data-idEstado="<%= ConsultaReceta[i].idEstado %>"
                                data-idC="<%= ConsultaReceta[i].idConsulta %>"
                                data-idPaciente="<%= ConsultaReceta[i].idPaciente %>"
                                data-NombrePaciente="<%= ConsultaReceta[i].NombrePaciente %>">
                                <i class='bx bx-file'></i> Receta</button></div>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal para ver receta -->
    <div id="modalReceta" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Receta Médica</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <form id="RecetaAceptada">
                        <input type="hidden" name="idC" id="idC">
                        <input type="hidden" name="idEstado" id="idEstado">

                        <!-- Contenido de la receta -->
                        <div class="mb-3">
                            <label for="Motivo" class="form-label fw-bold">Motivo:</label>
                            <p id="Motivo" class="form-control bg-light"></p>
                        </div>

                        <div class="mb-3">
                            <label for="Sintomas" class="form-label fw-bold">Síntomas:</label>
                            <p id="Sintomas" class="form-control bg-light"></p>
                        </div>

                        <div class="mb-3">
                            <label for="Diagnostico" class="form-label fw-bold">Diagnóstico:</label>
                            <p id="Diagnostico" class="form-control bg-light"></p>
                        </div>

                        <div class="mb-3">
                            <label for="Tratamiento" class="form-label fw-bold">Tratamiento:</label>
                            <p id="Tratamiento" class="form-control bg-light"></p>
                        </div>

                        <div class="mb-3">
                            <label for="Fecha" class="form-label fw-bold">Fecha:</label>
                            <p id="Fecha" class="form-control bg-light"></p>
                        </div>

                        <div class="mb-3">
                            <label for="Estado" class="form-label fw-bold">Estado:</label>
                            <p id="Estado" class="form-control bg-light"></p>
                        </div>

                        <!-- Votación de satisfacción -->
                        <div class="mb-3">
                            <label for="valor" class="form-label fw-bold">Votación de satisfacción:</label>
                            <select id="valor" name="valor" class="form-select" required>
                                <option value="1">Aceptada</option>
                                <option value="2">Denegada</option>
                            </select>
                        </div>

                        <!-- Botones de acción -->
                        <div class="text-end">
                            <button type="button" id="btnDownloadPDF" class="btn btn-outline-secondary me-2">
                                <i class='bx bx-printer'></i> Descargar PDF
                            </button>
                            <button type="submit" class="btn btn-primary">Aceptar Receta</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="./js/btn.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Variables globales para almacenar los datos de la receta
        let currentRecetaData = {};

        // Abrir modal de Receta Médica
        document.querySelectorAll(".btnVerReceta").forEach(button => {
            button.addEventListener("click", function() {
                // Actualizar campos del modal
                document.getElementById("Motivo").textContent = button.getAttribute("data-Motivo");
                document.getElementById("Sintomas").textContent = button.getAttribute("data-Sintomas");
                document.getElementById("Diagnostico").textContent = button.getAttribute("data-Diagnostico");
                document.getElementById("Tratamiento").textContent = button.getAttribute("data-Tratamiento");
                document.getElementById("Fecha").textContent = button.getAttribute("data-Fecha");
                document.getElementById("Estado").textContent = button.getAttribute("data-Estado");
                document.getElementById("idC").value = button.getAttribute("data-idC");
                document.getElementById("idEstado").value = button.getAttribute("data-idEstado");

                // Guardar datos para el PDF
                currentRecetaData = {
                    motivo: button.getAttribute("data-Motivo"),
                    sintomas: button.getAttribute("data-Sintomas"),
                    diagnostico: button.getAttribute("data-Diagnostico"),
                    tratamiento: button.getAttribute("data-Tratamiento"),
                    fecha: button.getAttribute("data-Fecha"),
                    idPaciente: button.getAttribute("data-idPaciente"),
                    nombrePaciente: button.getAttribute("data-NombrePaciente")
                };

                var myModal = new bootstrap.Modal(document.getElementById('modalReceta'));
                myModal.show();
            });
        });

        // Manejo del formulario de receta
        document.getElementById('RecetaAceptada').addEventListener('submit', async (event) => {
            event.preventDefault();

            const formData = new FormData(event.target);
            const data = { 
                valor: formData.get('valor'), 
                idC: formData.get('idC'),
                idEstado: formData.get('idEstado') 
            };

            try {
                const response = await fetch('/ResultadoSatisfaccion', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    Swal.fire({
                        title: "¡Receta aceptada!",
                        text: "La receta médica ha sido aceptada con éxito.",
                        icon: "success",
                        confirmButtonText: "Entendido",
                        customClass: {
                            popup: 'mi-alerta',  
                            title: 'mi-titulo',
                            confirmButton: 'mi-boton'
                        }
                    }).then(() => {
                        window.location.href = result.redirectTo;
                    });
                } else {
                    Swal.fire({
                        title: "Error",
                        text: result.message,
                        icon: "error",
                        confirmButtonText: "Intentar de nuevo"
                    });
                }

                // Cerrar correctamente el modal
                var modalReceta = bootstrap.Modal.getInstance(document.getElementById("modalReceta"));
                if (modalReceta) {
                    modalReceta.hide();
                }

                event.target.reset(); // Limpia el formulario
            } catch (error) {
                console.error('Error:', error);
            }
        });

        // Función para generar y descargar PDF usando tu plantilla receta.ejs
        document.getElementById('btnDownloadPDF').addEventListener('click', async function() {
    try {
        const data = {
            diagnostico: currentRecetaData.diagnostico,
            tratamiento: currentRecetaData.tratamiento,
            fecha: currentRecetaData.fecha, // Asegúrate de que esto viene de ConsultaReceta[i].Fecha
            pacienteInfo: {
                nombre: currentRecetaData.nombrePaciente,
                motivo: currentRecetaData.motivo,
                sintomas: currentRecetaData.sintomas
            }
        };

                // Enviar solicitud para generar PDF
                const response = await fetch('/generate-pdf', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (!response.ok) throw new Error('Error al generar PDF');

                // Crear un blob con el PDF y descargarlo
                const blob = await response.blob();
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `receta_${currentRecetaData.nombrePaciente}_${currentRecetaData.fecha}.pdf`;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        window.URL.revokeObjectURL(url);
    } catch (error) {
        console.error('Error al generar PDF:', error);
        Swal.fire("Error", "No se pudo generar el PDF.", "error");
            }
        });
    </script>
</body>
</html>